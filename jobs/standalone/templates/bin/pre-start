#!/bin/bash
set -eu

export PATH="/var/vcap/packages/redis/bin:$PATH"

sysctl vm.overcommit_memory=1
echo never > /sys/kernel/mm/transparent_hugepage/enabled || true

mkdir -p /var/vcap/store/standalone
chpst -u vcap:vcap redis-server --version > /var/vcap/store/standalone/REDIS_VERSION_FULL
chpst -u vcap:vcap redis-server --version | sed -e 's/.* v=\([^ ]*\).*/\1/' > /var/vcap/store/standalone/REDIS_VERSION
chown vcap:vcap /var/vcap/store/standalone/REDIS_VERSION_FULL /var/vcap/store/standalone/REDIS_VERSION